<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="jpaPU" transaction-type="RESOURCE_LOCAL">
		<class>com.eheinen.school.entity.Address</class>
		<class>com.eheinen.school.entity.person.Employee</class>
		<class>com.eheinen.school.entity.person.Person</class>
		<class>com.eheinen.school.entity.person.Student</class>
		<class>com.eheinen.school.entity.person.Teacher</class>
		<class>com.eheinen.school.entity.person.User</class>
		<class>com.eheinen.school.entity.school.Classroom</class>
		<class>com.eheinen.school.entity.school.Course</class>
		<class>com.eheinen.school.entity.school.Department</class>
		<class>com.eheinen.school.entity.school.Discipline</class>
		<class>com.eheinen.school.entity.school.Exam</class>
		<class>com.eheinen.school.entity.school.KnowledgeArea</class>
		<class>com.eheinen.school.entity.school.School</class>
		<class>com.eheinen.school.entity.school.SchoolClass</class>
		<properties>
			<!-- <property name="hibernate.hbm2ddl.auto" value="create-drop" /> -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/fiap_school" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="qwerty123" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name = "hibernate.show_sql" value = "true" />
		</properties>
	</persistence-unit>
</persistence>